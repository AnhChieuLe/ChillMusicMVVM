<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.example.chillmusic.enums.Navigation"/>
        <variable
            name="currentPlayer"
            type="com.example.chillmusic.object.CurrentPlayer" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="player"
        android:animateLayoutChanges="true"
        android:background="@{currentPlayer.style.backgroundColor}">
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="32dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/back"
                android:layout_centerVertical="true"
                android:tint="@{currentPlayer.style.contentColor}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist name"
                android:layout_centerInParent="true"
                android:textColor="@{currentPlayer.style.contentColor}"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="album_art"
            android:layout_below="@id/toolbar"
            android:layout_above="@id/info"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="8dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_album_art"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar"
                    android:bitmap="@{currentPlayer.song.smallImage}"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/group_extension"
            android:layout_alignStart="@id/seekbar_group"
            android:layout_alignEnd="@id/seekbar_group">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:button="@android:color/transparent"
                android:layout_alignStart="@id/info2"
                android:layout_alignEnd="@id/info2"
                android:layout_alignTop="@id/info2"
                android:layout_alignBottom="@id/info2" />

            <RelativeLayout
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginHorizontal="16dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/checkbox_icon"
                    android:transitionName="title"
                    android:text="@{currentPlayer.song.title}"
                    android:textColor="@{currentPlayer.style.contentColor}"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="textStart"
                    android:shadowColor="@{currentPlayer.style.contentColor}"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"/>
                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_toStartOf="@id/checkbox_icon"
                    android:transitionName="album_art"
                    android:text='@{currentPlayer.song.artist.equals("") ? @string/unknown : currentPlayer.song.artist}'
                    android:textColor="@{currentPlayer.style.contentColor}"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAlignment="textStart"
                    android:shadowColor="@{currentPlayer.style.titleColor}"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"/>

                <CheckBox
                    android:id="@+id/checkbox_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/tv_title"
                    android:layout_alignBottom="@id/tv_artist"
                    android:button="@drawable/show_ext"
                    android:checked="@{checkbox.checked ? true : false}"
                    android:clickable="false"
                    android:buttonTint="@{currentPlayer.style.contentColor}" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/group_extension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:layout_alignStart="@id/seekbar_group"
            android:layout_alignEnd="@id/seekbar_group"
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_above="@id/seekbar_group"
            android:visibility="@{checkbox.checked ? View.VISIBLE : View.GONE}">

            <LinearLayout
                android:id="@+id/volume_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/volume_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@{@string/volume + currentPlayer.volume.toString()}"
                    android:textColor="@{currentPlayer.style.contentColor}"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/checkboxVolume"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/volume"
                        android:tint="@{currentPlayer.style.contentColor}" />

                    <SeekBar
                        android:id="@+id/volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:minHeight="4dp"
                        android:maxHeight="4dp"
                        android:progress="@={currentPlayer.volume}"
                        android:splitTrack="false"
                        android:style="@{currentPlayer.style}"
                        android:progressDrawable="@drawable/custom_seekbar"
                        android:thumb="@drawable/seekbar_thumb_volume" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/extension_group_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="16dp"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="@{currentPlayer.style.contentColor}"
                    android:src="@drawable/playlist"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="@{currentPlayer.style.contentColor}"
                    android:src="@drawable/playlist_add"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="@{currentPlayer.style.contentColor}"
                    android:src="@drawable/timer"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="@{currentPlayer.style.contentColor}"
                    android:src="@drawable/share"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/seekbar_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/controller"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/seekbar_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:duration_text="@{currentPlayer.progress}"
                android:textColor="@{currentPlayer.style.contentColor}"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="@{currentPlayer.duration}"
                android:maxHeight="4dp"
                android:minHeight="2dp"
                android:progress="@{currentPlayer.progress}"
                android:progressDrawable="@drawable/custom_seekbar"
                android:splitTrack="false"
                android:style="@{currentPlayer.style}"
                android:thumb="@drawable/seekbar_thumb"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/seekbar_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seekbar"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:duration_text="@{currentPlayer.duration}"
                android:textColor="@{currentPlayer.style.contentColor}"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="32dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_navigation"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="5dp"
                android:layout_marginHorizontal="16dp"
                android:src="@{currentPlayer.navigation}"
                android:tint="@{currentPlayer.style.contentColor}"
                android:onClick="@{() -> currentPlayer.changeNavigation()}"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_previous"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="12dp"
                android:src="@drawable/previous"
                tools:ignore="ContentDescription"
                android:tint="@{currentPlayer.style.contentColor}"
                android:onClick="@{() -> currentPlayer.previous()}"/>

            <CheckBox
                android:id="@+id/img_play_or_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:button="@drawable/play_or_pause_48"
                android:checked="@={currentPlayer.isPlaying}"
                android:buttonTint="@{currentPlayer.style.contentColor}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_next"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="12dp"
                android:src="@drawable/next"
                tools:ignore="ContentDescription"
                android:tint="@{currentPlayer.style.contentColor}"
                android:onClick="@{() -> currentPlayer.next()}"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="5dp"
                android:layout_marginHorizontal="18dp"
                android:src="@drawable/favorite"
                tools:ignore="ContentDescription"
                android:tint="@{currentPlayer.style.contentColor}" />
        </LinearLayout>
    </RelativeLayout>
</layout>