<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.example.chillmusic.enums.Navigation"/>
        <variable
            name="currentPlayer"
            type="com.example.chillmusic.viewmodel.CurrentPlayer" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="player"
        android:animateLayoutChanges="true"
        android:background="@{currentPlayer.style.backgroundColor}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="album_art"
            android:layout_above="@id/expanded_group"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/avatar"
                android:bitmap="@{currentPlayer.song.largeAlbumArt}"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/roundedLargeImageView"
                app:strokeWidth="0.4dp"
                app:strokeColor="@{currentPlayer.style.contentColor}"
                android:contentDescription="@{currentPlayer.song.title}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/expanded_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/player_expandable"
            app:currentPlayer="@{currentPlayer}"
            android:layout_above="@id/seekbar_group"
            android:layout_marginBottom="16dp"/>

        <include
            android:id="@+id/seekbar_group"
            layout="@layout/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:currentPlayer="@{currentPlayer}" />
    </RelativeLayout>
</layout>